#!/usr/bin/env python3
"""
Wrapper script for copy_code.py to allow running without .py extension on Windows
"""
import subprocess
import sys
import os

# Run the main copy_code.py script
script_path = os.path.join(os.path.dirname(__file__), 'copy_code.py')
subprocess.run([sys.executable, script_path] + sys.argv[1:])